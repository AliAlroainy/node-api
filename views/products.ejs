<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>node-api</title>
    <link rel="stylesheet" href="bootstrap-5.1.3-dist/css/bootstrap.css" />
    <script
    src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
    crossorigin="anonymous"
  ></script>

  </head>
  <body>
    <div class="container">
      <header>
        <!-- As a link -->

        <!-- As a heading -->
        <nav class="navbar navbar-light bg-light">
          <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Ali Alroainy</span>
          </div>
        </nav>
      </header>

      <div class="row mt-5">
        <div class="col-lg-12">
          <div class="list-group">
            <button
              type="button"
              class="list-group-item list-group-item-action active"
              aria-current="true"
            >
              search
            </button>
            <a href="/products" >
            <button
              type="button"
              class="list-group-item list-group-item-action"
            >
              all products
            </button>
        </a>

        <a href="/products/categories" >
            <button
              type="button"
              class="list-group-item list-group-item-action"
            >
              Category
            </button>
        </a>

        <a href="/products/1" >
            <button
              type="button"
              class="list-group-item list-group-item-action"
            >
              id
            </button>
        </a>

        <a href="" >
            <button
              type="button"
              class="list-group-item list-group-item-action"
              disabled
            >
              smt
            </button>
          </div>
        </div>

        <div class="col-lg-12 d-flex flex-wrap justify-content-center  mt-5">
         

         
                <div class="row">
            <% products.forEach(product => { %>
                <div class="col-sm">
                <div class="card  " style="width: 18rem;">
                    <img class="card-img-top  rounded mx-auto d-block" src=" <%= product.thumbnail %> " alt="Card image cap" />
                    <div class="card-body">
                    <h4 class="card-title">
                    
                    <a href="/products/<%= product.id %>"> <%= product.title %> </a>
                  </h4>
                  <p class="card-text"><%= product.description %></p>
                  <P class="caed-text"><%=product.price%>$</P>
                  <P class="caed-text"><%=product.rating%></P>
                  <a href="#" class="btn btn-primary">Book Now</a>
                  <hr />
                  </div>
                </div>
                </div>
               
            
                <% }) %>
            </div>
          

 

      
      
        </div>
      </div>
    </div>

    <script src="bootstrap-5.1.3-dist/js/bootstrap.bundle.js"></script>
  </body>
</html>

